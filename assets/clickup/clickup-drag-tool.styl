MAX_INDENT = 9

.cu-draggable-anchor
  &.cu-draggable-anchor-center
    display: flex
    align-items: center

  .cu-draggable-anchor-icon
    display: flex
    align-items: center
    cursor: grab

    &:hover
      background-color: rgba(240, 240, 240, .6)
      border-radius: 4px

.cu-dragging-help-line
  position: absolute
  background-color: #516cf0
  height: 4px
  opacity: .5
  display: none
  pointer-events: none;

.ql-editor.ql-dragging-blocks
  caret-color: #516cf0

.ql-togglelist-placeholder
  &.allowed-active
    background-color: #516cf0
    cursor: pointer

  &.not-allowed-active
    background-color: rgba(209,100,100,.3)
    cursor: not-allowed

.ql-editor
  for num in (1..MAX_INDENT)
    .ql-wrapper-indent-{num}:not(.ql-direction-rtl)
      padding-left: (3*num)em
    li.ql-wrapper-indent-{num}:not(.ql-direction-rtl)
      padding-left: (3*num + LIST_STYLE_OUTER_WIDTH)em
    .ql-wrapper-indent-{num}.ql-direction-rtl.ql-align-right
      padding-right: (3*num)em
    li.ql-wrapper-indent-{num}.ql-direction-rtl.ql-align-right
      padding-right: (3*num + LIST_STYLE_OUTER_WIDTH)em