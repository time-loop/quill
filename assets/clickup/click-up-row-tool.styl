.clickup-table-view
  overflow: auto
  margin: 30px

.cu-row-tool
  position: absolute
  z-index: 99
  width: 30px
  display: flex
  flex-direction: column
  align-items: flex-end

  .cu-row-tool-cell
    position: relative
    background-color: #f3f3f3
    border-bottom: 1px solid #ddd

    &:hover,
    &.row-focused
      background-color: #e6e6e6

      .cu-row-tool-cell-add-row-top,
      .cu-row-tool-cell-add-row-bottom,
      .cu-row-tool-cell-delete-row
        opacity: 1
        z-index: 10

    &:first-child
      border-top: 1px solid #ddd

  .cu-row-tool-cell-add-row-top,
  .cu-row-tool-cell-add-row-bottom
    position absolute
    bottom: -6px
    left: -12px
    width: 12px
    height: 12px
    line-height: 11px
    text-align: center
    border-radius: 2px
    font-size: 12px
    color: #e6e6e6
    z-index: 1
    font-weight: 100
    opacity: 0
    cursor: pointer

    &:hover
      background-color: #516cf0
      color: #fff

  .cu-row-tool-cell-add-row-top
    bottom: auto
    top: -7px

  .cu-row-tool-cell-dropdown-icon
    position: absolute
    width: 12px
    height: 26px
    left: 0
    top: 50%
    transform: translateY(-50%)
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    cursor: pointer

    &-dot
      display: block
      width: 4px
      height: 4px
      margin-bottom: 2px
      border-radius: 100%
      background-color: #aaa
  
  .cu-row-tool-cell-delete-row
    position absolute
    top: 50%
    left: -12px
    width: 12px
    height: 12px
    border-radius: 2px
    font-size: 12px
    color: #e6e6e6
    z-index: 1
    font-weight: 100
    opacity: 0
    cursor: pointer
    transform: translateY(-50%)

    svg
      fill: #e6e6e6

    &:hover
      background-color: #516cf0
      
      svg
        fill: #fff
    


